<div class="table-container">
    <div class="table-actions-wrapper">
        <span> </span>
        <select class="table-group-action-input form-control input-inline input-small input-sm">
            <option value="">Select...</option>
            <option value="publish">Publish</option>
            <option value="unpublished">Un-publish</option>
            <option value="delete">Delete</option>
        </select>
        <button class="btn btn-sm btn-success table-group-action-submit">
            <i class="fa fa-check"></i> Submit
        </button>
    </div>
    <table class="table table-striped table-bordered table-hover table-checkable"
           id="datatable_products">
        <thead>
        <tr role="row" class="heading">
            <th width="1%">
                <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                    <input type="checkbox" class="group-checkable"
                           data-set="#sample_2 .checkboxes"/>
                    <span></span>
                </label>
            </th>
            <th width="10%"> ID</th>
            <th width="15%"> 课程名</th>
            <th width="10%"> 课程分类</th>
            <th width="10%"> 课程简述</th>
            <th width="15%"> 课程详述</th>

            <th width="10%"> 学分</th>
            <th width="10%"> 课时</th>
            <th width="10%"> 状态</th>
            <th width="10%"> 操作</th>
        </tr>
        <tr role="row" class="filter">
            <td></td>
            <td>
                <input type="text" class="form-control form-filter input-sm"
                       name="courseID">
            </td>

            <td>
                <input type="text" class="form-control form-filter input-sm"
                       name="courseName">
            </td>
            <td>
                <input type="text" class="form-control form-filter input-sm"
                       name="courseCategory">
            </td>
            <td>
                <input type="text" class="form-control form-filter input-sm"
                       name="courseShortDesc">
            </td>
            <td>
                <input type="text" class="form-control form-filter input-sm"
                       name="courseDesc">
            </td>
            <td>
                <input type="text" class="form-control form-filter input-sm"
                       name="courseCredit">
            </td>
            <td>
                <input type="text" class="form-control form-filter input-sm"
                       name="courseHours">
            </td>
            <td>
                <select name="product_status" class="form-control form-filter input-sm">
                    <option value="">Select...</option>
                    <option value="published">Published</option>
                    <option value="notpublished">Not Published</option>
                    <option value="deleted">Deleted</option>
                </select>
            </td>

            <td>
                <div class="margin-bottom-5" style="display: inline">
                    <button class="btn btn-sm btn-link filter-submit margin-bottom">
                        <i class="fa fa-edit"></i> 编辑
                    </button>
                </div>
                <button class="btn btn-sm btn-link filter-cancel" style="display: inline">
                    <i class="fa fa-times"></i> 删除
                </button>

                <button class="btn btn-sm btn-link filter-cancel">
                    <i class="fa fa-info"></i> 详情
                </button>
            </td>
        </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
