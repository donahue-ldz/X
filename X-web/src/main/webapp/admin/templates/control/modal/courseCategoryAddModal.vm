<div id="courseCategoryAddModal" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">新增课程分类</h4>
            </div>
            <div class="modal-body">
                <div class="scroller" style="height:300px" data-always-visible="1" data-rail-visible1="1">
                    <div class="row">
                        <div class="col-md-12">
                            <p>
                                <label>分类名:</label>
                                <input type="text" name="name" class=" required col-md-12 form-control">
                            </p>
                            <p>
                                <label>父节点:</label>
                                <input type="text" name="parentName" class="col-md-12 form-control" readonly>
                                <input type="hidden" name="parentID">
                            </p>
                            <p>
                                <label>描述:</label>
                                <textarea name="description" class=" required col-md-12 form-control"></textarea>
                            </p>

                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn dark btn-outline">取消</button>
                <button type="button" id="saveBtn" class="btn green">保存</button>
            </div>
        </div>
    </div>
</div>
