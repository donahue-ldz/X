    <bean id="bucConstantConfig" class="com.taobao.doa.ams.ops.biz.buc.service.config.BucConstantConfig">
        <property name="ownerUserId" value="${acl.permission.owner.userId}"/>
        <property name="userId" value="${acl.api.userId}"/>
        <property name="approverUserIds" value="${acl.permission.approverUserIds}"/>
    </bean>
