<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans default-autowire="byName">
    <!-- ACL 验权服务 -->
    <bean id="accessControlService" class="com.taobao.hsf.app.spring.util.HSFSpringConsumerBean" init-method="init">
        <property name="interfaceName" value="com.alibaba.buc.api.AccessControlService"/>
        <property name="version" value="${buc.acl.service.version}"/>
    </bean>


    <!-- 权限服务 -->
    <bean id="permissionACLService" class="com.taobao.hsf.app.spring.util.HSFSpringConsumerBean" init-method="init">
        <property name="interfaceName" value="com.alibaba.buc.api.PermissionService"/>
        <property name="version" value="${buc.acl.service.version}"/>
    </bean>

    <!-- userGroupService 用户组服务 -->
    <bean id="usergroupACLService" class="com.taobao.hsf.app.spring.util.HSFSpringConsumerBean" init-method="init">
        <property name="interfaceName" value="com.alibaba.buc.api.UsergroupService"/>
        <property name="version" value="${buc.acl.service.version}"/>
    </bean>
    <bean id="UserACLPermissionService" class="com.taobao.hsf.app.spring.util.HSFSpringConsumerBean" init-method="init">
        <property name="interfaceName" value="com.alibaba.buc.api.UserPermissionService"/>
        <property name="version" value="${buc.acl.service.version}"/>
    </bean>


    <!--申请流程状态查询API-->

    <bean id="applyInstanceACLService" class="com.taobao.hsf.app.spring.util.HSFSpringConsumerBean" init-method="init">
        <property name="interfaceName" value="com.alibaba.buc.api.ApplyInstanceService"/>
        <property name="version" value="${buc.acl.service.version}"/>
    </bean>

    <!-- UC 查询用户详情 -->
    <bean id="ucServcie" class="com.taobao.hsf.app.spring.util.HSFSpringConsumerBean" init-method="init">
        <property name="interfaceName">
            <value>com.alibaba.buc.api.EnhancedUserQueryService</value>
        </property>
        <property name="version">
            <value>${buc.uc.service.version}</value>
        </property>
        <property name="group">
            <value>${buc.uc.service.group}</value>
        </property>
    </bean>
