<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.X.dal.mapper.TopicFavoriteMapper">
    <resultMap id="topicFavoriteResultMap" type="TopicFavoriteDO">
        <id property="id" column="id"/>
        <result property="topicID" column="topic_ID"/>
        <result property="userID" column="user_ID"/>
        <result property="userRole" column="user_role"/>
        <result property="status" column="status"/>
        <result property="gmtCreate" column="gmt_create"/>
        <result property="gmtModified" column="gmt_modified"/>
    </resultMap>
    <insert id="save" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into X_topic_favorite(topic_ID,
        user_ID,
        user_role,
        gmt_create)
        VALUES (#{topicID},
        #{userID},
        #{userRole},
        #{gmtCreate})
    </insert>
    <update id="update">
        UPDATE X_topic_favorite
        SET status = #{status}
        WHERE topic_ID = #{id}
    </update>

    <select id="countFavoritesByTopicID" resultType="Long" parameterType="Long">
        SELECT COUNT(*)
        from X_topic_favorite
        WHERE topic_ID = #{topicID}
    </select>
</mapper>