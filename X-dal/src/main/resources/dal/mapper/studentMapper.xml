<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.X.dal.mapper.StudentMapper">
    <select id="queryStudentByStuID" parameterType="String"
            resultMap="studentResultMap">
        select *
        from  X_student t
        where t.student_ID = #{studentID}
    </select>

    <select id="queryStudentByEmail" parameterType="String"
            resultMap="studentResultMap">
        select *
        from  X_student t
        where t.email = #{email}
    </select>

    <insert id="save"
            useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into X_student(
        student_ID,
        student_name,
        email,
        password,
        gmt_create)values(
        #{studentID},
        #{studentName},
        #{email},
        #{password},
        #{gmtCreate})
    </insert>

    <resultMap id="studentResultMap" type="StudentDO">
        <id property="id" column="id"/>
        <result property="studentID" column="student_ID"/>
        <result property="studentName" column="student_name"/>
        <result property="avatarID" column="avatar_ID"/>
        <result property="email" column="email"/>
        <result property="nick" column="nick"/>
        <result property="password" column="password"/>
        <result property="status" column="status"/>
        <result property="gmtCreate" column="gmt_create"/>
        <result property="gmtModified" column="gmt_modified"/>
    </resultMap>

</mapper>